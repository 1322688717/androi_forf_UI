<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.DataStructureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_mind_mapping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据结构思维导图" />

        <Button
            android:id="@+id/btn_array"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数组" />

        <Button
            android:id="@+id/btn_stack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="栈" />

        <Button
            android:id="@+id/btn_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="队列" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="链表" />

        <Button
            android:id="@+id/btn_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="树" />

        <Button
            android:id="@+id/btn_figure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图" />

        <Button
            android:id="@+id/btn_heap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="堆" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="TextView" />

        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/datastrcture" />

    </LinearLayout>

</ScrollView>